#!/bin/sh

vol(){
vol=$(amixer get Master \
     | sed -nE '/Front Left/s/(.*)(\[[0-9]{1,3}%\])(.*)/\2/p')

  printf '%s' " ^c#cc99cc^  ${vol} ^c#ffffff^   "
}

clk(){ 
date=$(date "+%d %b (%a) %l:%M %p")
  printf '%s' " ^c#66cccc^  $date "
}

cpu(){
  read -r cpu a b c previdle rest < /proc/stat
prevtotal=$((a+b+c+previdle))
  sleep 0.5
  read -r cpu a b c idle rest < /proc/stat
total=$((a+b+c+idle))
cpu=$((100*( (total-prevtotal) - (idle-previdle) ) / (total-prevtotal) ))
  printf '%s' "^c#f2777a^  $cpu %"
}

net(){
R1=$(cat /sys/class/net/$(ip route get 1.1.1.1 | grep -Po '(?<=dev\s)\w+' | cut -f1 -d ' ')/statistics/rx_bytes)
T1=$(cat /sys/class/net/$(ip route get 1.1.1.1 | grep -Po '(?<=dev\s)\w+' | cut -f1 -d ' ')/statistics/tx_bytes)
  sleep 1
R2=$(cat /sys/class/net/$(ip route get 1.1.1.1 | grep -Po '(?<=dev\s)\w+' | cut -f1 -d ' ')/statistics/rx_bytes)
T2=$(cat /sys/class/net/$(ip route get 1.1.1.1 | grep -Po '(?<=dev\s)\w+' | cut -f1 -d ' ')/statistics/tx_bytes)
TBPS=$((T2 - T1))
RBPS=$((R2 - R1))
TKBPS=$((TBPS / 1024))
RKBPS=$((RBPS / 1024))
  printf '%s' " ^c#6699cc^  $RKBPS kb   $TKBPS kb"
}

ram(){
ram=$(free -h \
     | sed -nE '2s/([^ ]* *){2}([^ ]*).*/\2/p')
  printf '%s' " ^c#99cc99^  $ram "
}

tmp(){
tmp=$(sensors \
      | sed -nE '/CPU/s/(.*)\+(.*)/\2/p')
  printf '%s' "^c#ffffff^   ^c#ffcc66^  $tmp"
}

case $1 in
    vol ) vol ;;
    clk ) clk ;;
    cpu ) cpu ;;
    net ) net ;;
    ram ) ram ;;
    tmp ) tmp ;;
esac
